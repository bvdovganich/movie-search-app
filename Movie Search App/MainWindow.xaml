<Window x:Class="Movie_Search_App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Movie_Search_App"
        mc:Ignorable="d"
        Title="MainWindow" Height="395.186" Width="599.289"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="pack://application:,,,/MaterialDesignThemes.Wpf;component/Resources/Roboto/#Roboto"
>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
            <RowDefinition Height="35"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TextBlock Margin="5,4,0,0" Grid.Row="1" Text="Enter movie title:" />
        <TextBox Margin="5 0" Grid.Row="1" Grid.Column="1" Height="30" Text="Test" ></TextBox>
        <TextBox Margin="5 0" Grid.Row="2" Grid.Column="1" Height="30" Text="Test" ></TextBox>
        <TextBox Margin="5 0" Grid.Row="3" Grid.Column="1" Height="30" Text="Test" ></TextBox>
        <TextBox Margin="5 0" Grid.Row="4" Grid.Column="1" Height="30" Text="Test" ></TextBox>
        <TextBox Margin="5 0" Grid.Row="5" Grid.Column="1" Height="30" Text="Test" ></TextBox>
        <ComboBox Name="ComboBox1" Margin="5 7 0 0" Grid.Row="2" Loaded="Combobox1_Loaded"></ComboBox>
        <ComboBox Name="ComboBox2" Margin="5 7 0 0" Grid.Row="3" Loaded="Combobox2_Loaded"></ComboBox>
        <ComboBox Name="ComboBox3" Margin="5 7 0 0" Grid.Row="4" Loaded="Combobox3_Loaded"></ComboBox>
        <ComboBox Name="ComboBox4" Margin="5 7 0 0" Grid.Row="5" Loaded="Combobox4_Loaded"></ComboBox>
    </Grid>

</Window>
